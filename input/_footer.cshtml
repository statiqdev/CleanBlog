<footer>
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-3 text-center">
                <a href="@Context.GetLink("/")"><img id="flogo" class="img-fluid center" src="/assets/mm logo.svg" alt="MuktoMona Logo"></a>
            </div>
        </div>
        <div class="row justify-content-md-center">
            <div class="col-sm-3 social-icons">
              <a href="https://www.facebook.com/muktomonaofficial"><i id="social-fb" class="fa fa-facebook-square fa-3x social"></i></a>
              <a href="https://twitter.com/AvijitsMM"><i id="social-tw" class="fa fa-twitter-square fa-3x social"></i></a>
              <a href="https://plus.google.com/105614742272236060197"><i id="social-gp" class="fa fa-google-plus-square fa-3x social"></i></a>
              <a href="https://www.youtube.com/channel/UCKqgpT9IV2wUMueMF7cCsSw"><i id="social-yt" class="fa fa-youtube-square fa-3x social"></i></a>
              <a href="mailto:contact@mukto-mona.com"><i id="social-em" class="fa fa-envelope-square fa-3x social"></i></a>
            </div>
            <div class="col-md-12 text-center">
                <ul class="list-inline text-center small">                                
                    @{
                        IDocument rssFeed = Outputs["**/*.rss"].FirstOrDefault();
                        IDocument atomFeed = Outputs["**/*.atom"].FirstOrDefault();
                    }
                    @if (rssFeed != null) {
                        <li class="list-inline-item">
                            <a href="@Context.GetLink(rssFeed)"><i class="fa fa-rss"></i> RSS Feed</a>
                        </li>
                    }
                    @if (atomFeed != null) {                            
                        <li class="list-inline-item">
                            <a href="@Context.GetLink(atomFeed)"><i class="fa fa-rss"></i> Atom Feed</a>
                        </li>
                    }
                </ul>
                <p class="copyright text-muted m-0"> মুক্তমনা © ২০২০, সর্বস্বত্ব সংরক্ষিত। </p>
            </div>
        </div>
    </div>
</footer>